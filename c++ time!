#include <iostream>
#include <cmath>

int main() {

  //variables

  double a, b, c, root1, root2;


  //user prompts

  std::cout << "Enter a: " << "\n";
  std::cin >> a;
  std::cout << "Enter b: " << "\n";
  std::cin >> b;
  std::cout << "Enter c: " << "\n";
  std::cin >> c;

  //solving stuff!
  root1 = (-b + std::sqrt(b*b - 4*a*c)) / (2*a);
  root2 = (-b - std::sqrt(b*b - 4*a*c)) / (2*a);

  std::cout << "Root 1: " << root1 << "\n" << "Root 2: " << root2 << "\n"; 
}
